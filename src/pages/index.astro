import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="29Dollar.Site - One-time websites for $29">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl font-bold mb-6">Build your website for $29</h1>
    <p class="text-xl mb-8">No subscriptions, no hassles, just a beautiful website.</p>
    
    <div class="flex justify-center gap-4">
      <a href="/playground" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
        Start Building
      </a>
      <a href="#examples" class="px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-100">
        See Examples
      </a>
    </div>
  </div>
</SiteLayout>