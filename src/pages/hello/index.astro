---
// src/pages/hello/index.astro
import SiteLayout from "../../layouts/SiteLayout.astro";
import { SignIn } from "@clerk/astro/components";
---

<SiteLayout title="Hello - 29Dollar.Site">
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Welcome to 29Dollar.Site</h1>
    <p class="text-gray-600 mb-6 text-center">
      Enter your email below and we'll send you a magic link for instant access.
    </p>
    
    <SignIn path="/hello" redirectUrl="/portal" />
    
    <div class="mt-6 text-center text-sm text-gray-500">
      <p>No passwords to remember - just quick, secure access.</p>
    </div>
  </div>
</SiteLayout>